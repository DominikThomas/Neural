<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"	
	xsi:schemaLocation="http://www.springframework.org/schema/util
						http://www.springframework.org/schema/util/spring-util.xsd/
						http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans.xsd
	">
						
 	<import resource="../neuralnet/activationFunctions.xml"/> 
	<bean id="neuralNet"
		class="io.github.dominikthomas.neuralnet.beans.NeuralNet" init-method="init">
		<property name="numberOfInputs" value="2" />
		<property name="numberOfOutputs" value="1" />
		<property name="hiddenLayers">
			<list value-type="io.github.dominikthomas.neuralnet.HiddenLayer">
				<ref bean="layer1"/>
				<ref bean="layer2"/>
			</list>
		</property>
		<property name="outputAcFnc" ref="linear" />
	</bean>
	
	<bean id="layer1"
		class="io.github.dominikthomas.neuralnet.beans.HiddenLayer" >
		<property name="numberOfNeuronsInLayer" value="10" />
		<property name="activationFunction" ref="linear" />
		<property name="neuralNet" ref="neuralNet" />
	</bean>
	
	<bean id="layer2"
		class="io.github.dominikthomas.neuralnet.beans.HiddenLayer" >
		<property name="numberOfNeuronsInLayer" value="3" />
		<property name="activationFunction" ref="sigmoid" />
		<property name="neuralNet" ref="neuralNet" />
	</bean>
	
</beans>